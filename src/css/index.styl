$main_dark = #000
$main_lite = #fff
$main_highlite = #FBD784
$mian_highlite_title = #FFC178
$main_buttons = #FFA343
$main_border = rgba($main_lite, 15%)
$main_shift = 4.7rem;
$border_radius = 8px;

html,
body {
    font: 18px/1.7 'Open Sans', sans-serif;
}

body {
    overflow-x: hidden;
    width: 100vw; 
    // background: $main_dark; url("/images/cover.jpg") no-repeat center top;
    background: $main_dark;
    background-size: 100% auto;
    // background-size: 100% 100vh;
    color: $main_lite
}

a {
    color: $main_highlite;
    transition: opacity 0.3s;
    opacity: 1;

    &:visited {
        // color: darken($main_highlite, 10);    
        color: $main_highlite  
    }

    &:hover,
    &:active {
        opacity: 0.7;
    }
}

/* Main styles */
.content {
    padding: 0 $main_shift $main_shift;
    max-width 1460px;
    margin: 0 auto;
    margin-top: 50px;

    p {
        margin-bottom: 1.3em;
    }

    &_small {
        max-width: 934px;
        padding: 0 2.75rem 2.75rem;
        margin: 0 auto;
    }
}


.cover-space {
    background: url("/images/cover.jpg") no-repeat center top;
    background-size: 100% auto;
    padding-bottom: 82%;

    &__image {
        position: absolute;
        padding: 41%;
        top: 0;
        left: 0;
        right: 0;
        text-align: center;
        background: linear-gradient(to top, rgba(0,0,0,0.75) 0%, rgba(0,0,0,0) 100%);
    }
}

.header {
    position: fixed;
    z-index: 999;
    top: 2rem;
    width: 100%


    &__content {
        display: grid;
        grid-template-columns: auto 1fr;
        padding: 0 $main_shift;
        align-items: center;
    }

    &__center {
        display: flex;
        justify-content: center
    }
}

.logo {
    color: $main_lite;
    text-decoration:  none;
    letter-spacing: 1%;

    &:visited {
        color: $main_lite;
    }

    &__title {
        font-size: 1.3rem;
        font-weight: 700
    }
}

.main-nav {
    &__list {
        display: flex;
    }

    &__link {
        color: $main_lite;
        padding: 1.8rem 1.38rem;
        display: inline-block;
        text-decoration: none;
        
        &:visited {
            color: $main_lite
        }
    }
}

.search {
    display: flex;
    align-items: center;
    justify-content: center;

    &__icon {
        width: 1rem;
        height: 1rem;
        background: url('/images/icons/search.svg') no-repeat center center;
        background-size: content;
        cursor: pointer;
        padding-right: 0.5 rem;
    }

    &__form{
        background: none;
        border: none;
        transition: width 0.3s;
        width: 3.4rem;
        font: 0.9rem/1 'Open Sans', sans-serif;
        padding: 0.2rem 0.5rem;
        color: $main_lite
        border-radius: 5px;

        &::placeholder {
            color: $main_lite
        }

        &:focus {
            border: none;
            outline: none;
            width: 10rem;
            background: rgba(0,0,0,0.15)
            color: $main_lite

            &::placeholder {
                color: $main_lite
            }
        }

    }
}

.section__main {
    display: flex; 
    align-items: center;
    flex-direction: column;
    position: absolute;
    left: $main_shift;
    right: $main_shift;
    top: 14vw;
}

.main-title {
    // font-size: 1rem;
    margin-bottom: 6.2em;

    &__summary {
        font-weight: 700; 
        color: $mian_highlite_title
        text-transform: uppercase;
        letter-spacing: .36rem;
        display: flex;
        align-items: center;
        margin-bottom: 1.5em;
        font-size: 1.2em;

        &::before {
            content: '';
            display: block;
            width: 4em;
            height: 3px;
            margin-right: 1.5em;
            background: $mian_highlite_title;

        }
    }
     
    &__text {
        font-size: 5.4em;
        font-weight: 700;
        line-height: 1.1;

        .main-title__summary {
            color: $main_highlite
            &::before {
                background: $mian_highlite
            }
        }

        &_regular {
            display: block;
            font-size: 0.9em;
            font-weight: 400;
        }
    }
}

.main-title_small {
    font-size: 1rem;
    margin-bottom: 1.8em;

    .main-title__text {
        font-size: 3.4em;
        line-height: 1.4;
    }    
}

.main-title_centered {
    text-align: center;

    .main-title__summary {
        justify-content: center

        &::after {
            content: '';
            display: block;
            width: 4em;
            height: 3px;
            // Отнимаем потому что letter-spacing 
            margin-left: calc(1.5em - 0.36em);
            background: $mian_highlite_title ;
        }
    }
}

.social-networks {
    position: absolute;
    left: 0;
    top: 4rem;
    display: flex;
    flex-direction: column;
    align-items: center;

    &__title {
        writing-mode: vertical-lr;
        margin-bottom: 1.3rem;
    }

    &__item{
        margin-bottom: 1rem;
    }
    
    &__link{ 
        opacity: 1;
        transition: opacity 0.3s;

        &:hover {
            opacity: 0.7;
        }
    }
}

.social-horisontal {
    display: flex;
    font-size: 1.3rem;

    &__item {
        display: inline-block;
        margin-left: 2rem;
    }

    &__link {
        display: inline-block;
        opacity: 1;
        transition: opacity 0.3s;

        &:hover {
            opacity: 0.7;  
        }
    }

}

.scroll-down {
    display: flex;
    cursor: pointer;
    opacity: 1;
    transition: 0.3s;

    &:hover {
        opacity: 0.7;
    }

    &__icon {
        margin: 0.2em 0 0 0.5em;
    }
}

/* Columns */
.section {
    margin-bottom: 14rem;
}

.section-cols {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.section-col {
    &__image {
        width: 40%
    }

    &__content  {

        width: 44%
    }
}

.section-border {
    padding-bottom: 3rem;
    border-bottom: 1px solid $main_border;
    margin-bottom: 3rem;
}



.arrow-link {
    text-decoration: none;
    display: flex;
    align-items: center;

    &__icon {
        margin: 0.2rem 0 0 0.4rem;
    }

    &_centered {
        justify-content: center;
    }
}

.button {
    border: none;
    background: $main_buttons;
    font: 700 0.9rem/1 'Open Sans', sans-serif; // весь шрифт заново - элемент формы
    padding: 1.6em 4.5em 1.4em; // em - наследование от шрифта в форме
    border-radius: $border_radius;
    cursor: pointer;
    transition: background 0.3s;

    &:hover {
        background: $mian_highlite_title; 
    }
}

/* Gallery  */
.gallery {
    &__slide{
        position: relative;
        width: 100%;
        padding-bottom: 67%
        background-size: cover;
    }

    &__content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        text-align: center;
        background: linear-gradient(to top, rgba(0,0,0,0.75) 0%, rgba(0,0,0,0) 100%);
    }
}

/* Under-footer */
.start {
    display: flex;
    align-content: center;
    justify-content: space-between;

    &__title {
        font-size: 2.66rem;
        font-weight: 700;
        margin-right: 3rem;
    }

    &__desc {
        font-size: 1.22rem;
        margin-right: 3rem
    }

    &__content {
        display: flex;
        align-items: baseline;
    }

    &__content2 {
        display: flex;
        align-items: center;
    }
}

/* Footer */
.subscribe {
    width: 27%;

    &__title {
        font-size: 2rem;
        font-weight: bold;
        line-height: 1.4;
        margin-bottom: 1.38em;
    }
}

.email {
    width: 100%
    margin-top: 2rem;
    display: grid;
    grid-template-columns: 1fr auto;
    border-bottom: 1px solid $main_border;

    &__form {
        background: none;
        border: none;
        font: 0.83rem/1 'Open Sans', sans-serif;
        padding: 1.1em 0.77em 1.77em;
        color: $main_lite;

        &::placeholder {
            color: rgba($main_lite, 20%);
        }
        
        &:focus {
            border: none;
            outline: none;
        }

        
    }
    &__button {
        padding: 0; 
        height: 100%;
        width: 3.55rem;
        border-radius: $border_radius $border_radius 0 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }  
}

.menu {
    width: 8rem;
    &__title {
        color: $main_highlite;
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 0.5em;
    }

    &__item {
        margin-bottom: 0.7rem;
    }

    &__link {
        color: $main_lite;
        text-decoration: none;

        &:hover,
        &:visited,
        &:active {
            color: $main_lite;
        }
    }
}

.footer {
    &__content {
        display: flex;
        justify-content: space-between;
        margin-bottom: 7rem;
    }

    &__bottom {
        display: flex;
        justify-content: space-between;   
        padding: 0 2.22rem; 
    }

    &__link {
        color: $main_lite;
        text-decoration: none;
        font-size: 0.833rem;
        display: inline-block;
        margin-right: 4.5rem;

        &:hover,
        &:visited,
        &:active {
            color: $main_lite;
        }

        &:last-child {
            margin-right: 0;
        }
    }
      
}

/* icons */
.icon__instagram {
    width: 1.3em;
    height: 1.3em;
    background: url("/images/icons/instagram.svg") no-repeat center center;
    background-size: contain;
}

.icon__twitter {
    width: 1.3em;
    height: 1.3em;
    background: url("/images/icons/twitter.svg") no-repeat center center;
    background-size: contain;
}

.icon__facebook {
    width: 1.3em;
    height: 1.3em;
    background: url("/images/icons/facebook.svg") no-repeat center center;
    background-size: contain;
}

.icon__arrow__downward {
    width: 1em;
    height: 1.4em;
    background: url("/images/icons/arrow_downward.svg") no-repeat center center;
    background-size: contain;
}

.icon__arrow_rightward {
    width: 1.6em;
    height: 1.2em;
    background: url('/images/icons/arrow_rightward.svg') no-repeat center center;
    background-size: contain;
}

.icon__right {
    width: 1.5em;
    height: 1.5em;
    background: url('/images/icons/arrow_right.svg') no-repeat center center;
    background-size: contain;
}

.burger-menu {
    display: grid;

    &__content {
        display: grid;
        grid-template-columns: 1fr auto;

    }
 
    &__control {
        display: none;
    }

}

.body_burger-opened {
    overflow: hidden;
}

.space-cover__burger {
    opacity: 0;
    position: fixed;
    z-index: -2;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    pointer-events: none; 
    transition: opacity 0.3s;
}

/* Mobile version */

@media screen and (max-width: 1550px) {
    html,
    body {
        font-size: 14px;
    }
}

@media screen and (max-width: 1380px) {
    .section-col {
        &__image {
            width: 43%
        }

        &__content  {

            width: 50%
        }
    }
    
}

@media screen and (max-width 1310px) {
    .main-title {
        font-size: 0.9rem;
    }
}

@media screen and (max-width 1750px) {
    html,
    body {
        font-size: 16px;
    }



    .section-col {
        &__image {
            width: 40%
        }

        &__content  {

            width: 50%
        }
    }

    .content {
        max-width: 1200px;
    }
}

@media screen and (max-width 700px) {
    .burger-menu {
        display: block;
        position: fixed;
        background: black;
        z-index: 999;
        width: 70vw;
        top: 0;
        right: 0;
        bottom: 0;
        transform: translate3d(70vw, 0, 0);
        transition: all 0.3s;

        &__content {
            height: 100vh;
            display: block;
            box-sizing: border-box;
            padding: 1.3rem ;
            display: grid;
            grid-template-columns: 1fr;
            grid-template-rows: 1fr auto;
        }

        &__control {
            display: block;
            width: 2rem;
            height: 2rem;
            position: absolute;
            left: calc(-4.7rem - 2rem);
            top: 2.1rem;
            background: url('../images/icons/menu.svg') no-repeat center center;
            background-size: contain;
            outline: none;
            border: none;
            cursor: pointer;
            transition: opacity 0.3s;

            &:hover {
                opacity: 0.7;
            }
        }
    }

    .logo {
        transform: translate3d(0, 0, 0);
        transition: transform 0.3s;
    }

    .page {
        // overflow: hidden;
        transform: translate3d(0, 0, 0);
        transition: transform 0.3s;
    }

    .body_burger-opened {
        overflow: hidden;

        .page {
        transform: translate3d(-70vw, 0, 0);
        }

        .logo {
            transform: translate3d(-70vw, 0, 0);
        }

        .space-cover__burger {
            pointer-events: auto;
            z-index: 998;
            opacity: 1; 
        }

        .burger-menu {
            transform: translate3d(0, 0, 0);

            &__control {
                left: -3.5rem;
                background-image: url('../images/icons/close.svg')
            }
        }
    }

    .main-nav {
        display: block;
        margin-bottom: 1rem;

        &__list {
            display: block;
        }

        &__link {
            width: 100%;
            box-sizing: border-box;
            text-align: center;
            padding: 1rem 1rem;

            &:hover,
            &_active,
            &_active:visited {
                background: white;
                color: black;
                opacity: 1;
                transition: all 0.3s;
            }
        }
    }

} 

@media screen and (max-width 700px) {
    .header {
        &__content {
            padding: 0 1.5rem;
        }
    }

    .section {
        // margin-bottom: 1.5rem; 
        margin-bottom: 3rem; 
        &__main {
            margin-bottom: 4rem;
            padding: 0 1.5rem;
        }
    }

    .section-cols {
        flex-direction: column;
    }

    .section-col {
        &:first-child,
        &:last-child {
            width: 100%;
            
        }
        &__image {
            order: 1;
            // margin-bottom: 2.5rem;
            margin-bottom: 3rem;
        }

        &__content {
            order: 2;
        }
    }

    .content {
        padding: 0 1.5rem 1.5rem;

        &_small {
            padding: 1.5rem;
        }
    }

    .burger-menu__control {
        left: calc(-1.5rem - 2rem);
    }

    .main-title {
        text-align: center;
        margin-bottom: 2em; 
        &__text {
            font-size: 3em;
            line-height: 1.3;
        }

        &__summary {
            display: block;
            margin-bottom: 1em;

            &::before {
                display: none;
            }
        }

        &__gallery {
            -webkit-line-clamp: 4; /* Число отображаемых строк */
            display: -webkit-box; /* Включаем флексбоксы */
            -webkit-box-orient: vertical; /* Вертикальная ориентация */
            overflow: hidden; 
        }

        .main-title__summary::after {
            display: none;
        }

        &_small {
            font-size: 0.75rem;
        }
    }

    .section__main {
        position: static;
    }

    .social-networks {
        position: static;
        display: flex;
        // align-items: center;
        flex-direction: row;
        margin-bottom: 3rem;
        &__title {
            writing-mode: initial;
            margin-right: 0.5rem;
            margin-bottom: 0rem;
        }
        &__list {
            display: flex;
        }
        &__item {
            padding: 0 0.5rem;
            margin-bottom: 0rem;
        }
    }

    .start {
        text-align: center;
        display: block;

        &__title {
            margin-right: 0;
        }

        &__desc {
            margin-right: 0;
            margin-bottom: 1rem;
        }

        &__content {
            display: block;
        }

        .button {
            width: 100%;
        }
    }

    .footer {
        &__content {
            display: flex;
            flex-wrap: wrap;
            margin: 2rem 0 ;
        }

        &__bottom {
            display: block;
            padding: 0;
            text-align: center;
        }

        &__link {
            width: 8rem;
            margin-right: 0;
        }

        .subscribe {
            width: 30rem;
        }

        .menu {
            margin: 2rem 0;
            width: auto;
        }

        .social-horisontal {
            justify-content: center;

            &__item {
                margin-left: 0;
                padding: 1rem;
            }
        }
    }

    .gallery {
        &__slide {
            padding-bottom: 150%;
        }

        &__content {
            top: 0;
            display: flex;
            align-items: center;
            background: rgba(0,0,0,0.2);
        }
    }
}